{% extends "admin/layout.twig" %}

{% block title %}Admin{% endblock %}

{% block content %}
	<div class="col-3 offset-9 col-sm-2 offset-sm-10 col-lg-1 offset-lg-11 mt-4">
		<a href="add" class="btn btn-success">Añadir</a>
	</div>
	<div class="table-responsive col-12">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Código</th>
					<th>Nombre</th>
					<th>Precio</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
			{% for article in articles %}
				<tr>
					<td>{{article.id}}</td>
					<td>{{article.title}}</td>
					<td>{{article.price}} €</td>
					<td class="text-center">
						<a href="#" class="btn btn-secondary">Editar</a>
						<button class="btn btn-danger deleteBtn">Borrar</button>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}